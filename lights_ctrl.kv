<STWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text_size: self.size
                valign: 'middle'
                halign: 'left'
                text: 'Lights control'
                size_hint_y: 0.1
            BoxLayout:
                orientation: 'horizontal'
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        text: 'full'
                        font_size: 24
                        id: a_100
                        on_release: root.light_chn_upd(0, 100)
                    Button:
                        text: '70%'
                        font_size: 24
                        id: a_70
                        on_release: root.light_chn_upd(0, 70)
                    Button:
                        text: '40%'
                        font_size: 24
                        id: a_40
                        on_release: root.light_chn_upd(0, 40)
                    Button:
                        text: '20%'
                        font_size: 24
                        id: a_20
                        on_release: root.light_chn_upd(0, 20)
                    Button:
                        text: 'off'
                        font_size: 24
                        id: a_0
                        on_release: root.light_chn_upd(0, 0)
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        text: 'full'
                        font_size: 24
                        id: b_100
                        on_release: root.light_chn_upd(1, 100)
                    Button:
                        text: '70%'
                        font_size: 24
                        id: b_70
                        on_release: root.light_chn_upd(1, 70)
                    Button:
                        text: '40%'
                        font_size: 24
                        id: a_40
                        on_release: root.light_chn_upd(1, 40)
                    Button:
                        text: '20%'
                        font_size: 24
                        id: a_20
                        on_release: root.light_chn_upd(1, 20)
                    Button:
                        text: 'off'
                        font_size: 24
                        id: a_0
                        on_release: root.light_chn_upd(1, 0)
                