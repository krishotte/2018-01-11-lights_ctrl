#:kivy 1.9.0
<Button1@Button>:
    font_size: '22sp'
<Label1@Label>:
    text_size: self.size
    padding_x: 10
    font_size: '20sp'
    valign: 'middle'
    halign: 'left'
    size_hint_y: 0.1
<STWidget>:
    orientation: 'vertical'
    elog: eventlog
    sldr: sldr1
    Carousel:
        BoxLayout:
            orientation: 'vertical'
            Label1:
                text: 'Lights control'
                canvas.before:
                    Color:
                        rgba: 0.059, 0.220, 0.346, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.8
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.4
                    Button1:
                        text: 'full'
                        on_release: root.light_chn_upd(0, 100)
                    Button1:
                        text: '70%'
                        on_release: root.light_chn_upd(0, 70)
                    Button1:
                        text: '40%'
                        on_release: root.light_chn_upd(0, 40)
                    Button1:
                        text: '20%'
                        on_release: root.light_chn_upd(0, 20)
                    Button1:
                        text: 'off'
                        on_release: root.light_chn_upd(0, 0)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.4
                    Button1:
                        text: 'full'
                        on_release: root.light_chn_upd(1, 100)
                    Button1:
                        text: '70%'
                        on_release: root.light_chn_upd(1, 70)
                    Button1:
                        text: '40%'
                        on_release: root.light_chn_upd(1, 40)
                    Button1:
                        text: '20%'
                        on_release: root.light_chn_upd(1, 20)
                    Button1:
                        text: 'off'
                        on_release: root.light_chn_upd(1, 0)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.2
                    ToggleButton:
                        size_hint_y: 0.1
                        text: 'Ch1'
                        group: 'a'
                        id: TGlBtn1
                        on_release: root.slider_update()
                    ToggleButton:
                        size_hint_y: 0.1
                        text: 'Ch2'
                        group: 'a'
                        id: TGlBtn2
                        state: 'down'
                        on_release: root.slider_update()
                    Slider:
                        orientation: 'vertical'
                        size_hint_y: 0.8
                        min: 0
                        max: 100
                        step: 2
                        value: 20
                        id: sldr1
                        on_value: root.slider_move()
        BoxLayout:
            orientation: 'vertical'
            Label1:
                text: 'Event log'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.22
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                size_hint_y: 0.9
                text_size: self.size
                padding_x: 10
                font_size: '12sp'
                valign: 'bottom'
                halign: 'left'
                text: 'Event#1' + str(self.texture_size)
                id: eventlog
               